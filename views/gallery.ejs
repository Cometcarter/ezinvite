        </div>
      </div>
    </section>

    <section class="listofevents">

      <div class="accepted gallery-left">
        <h2 class="line-break">Attending</h2>
        <% for (let i=0; i<acceptedevents.length; i++) {%>
          <div class="col-lg-6">
            <div class="event-item d-flex justify-content-around">
              <span>
                <%= acceptedevents[i].eventtitle%>
              </span>
              <span>
                <%= new Date(acceptedevents[i].date).toDateString()%>
              </span>
            </div>
          </div>

          <% } %>
      </div>
      <div class="requested gallery-right">
        <h2 class="line-break">Requested</h2>
        <% for (let i=0; i<requestedevents.length; i++) {%>
          <div class="col-lg-6">
            <div class="event-item d-flex justify-content-around">
              <span>
                <%= requestedevents[i].eventtitle%>
              </span>
              <span>
                <%= new Date(requestedevents[i].date).toDateString()%>
              </span>
            </div>
          </div>
          <% } %>
      </div>
    </section>

  </main>

